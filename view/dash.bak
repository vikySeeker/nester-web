                <div class="row my-5">
                    <div>
                        <h3 class="fs-4 mb-3">Recent Tasks</h3>
                        <div type="button" class="btn btn-primary mb-3 float-end" data-bs-toggle="modal" data-bs-target="#exampleModal"
                            style="background-color: #009d63 !important; border-color: #009d63 !important;">
                            Add Task
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/task" method="POST">
                                        <div class="row mt-2">
                                            <div class="col-md-6"><label for="username" class="label-text">Task Name:</label><input type="text" class="form-control" placeholder="Task Name" value="" name="taskname"></div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-6"><label for="Schedule date" class="label-text">Schedule Date:</label><input type="date" class="form-control" value="" name="sdate"></div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-6"><label for="Schedule time" class="label-text">Schedule time:</label><input type="time" class="form-control" value="09:30 am" name="stime"></div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-6"><label for="new-password1" class="label-text">Enter Target IP subnet:</label><input type="text" class="form-control" placeholder="1.1.1.1/24 or 1.1.1.1, 1.1.1.3, 1.1.1.240" value="" name="tip"></div>
                                            <div class="col-md-6"><label for="new-password2" class="label-text">Target Domain:</label><input type="text" class="form-control" placeholder="*.example.com or example.com, test.example.com" value="" name="tdomain"></div>
                                        </div>
                                        <div class="mt-5 text-right">
                                            <button class="btn btn-primary float-end" 
                                                style="background-color: #009d63 !important; border-color: #009d63 !important;" 
                                                type="submit">Add Task
                                            </button>
                                            <button type="button" class="btn btn-secondary float-end me-3" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </form> 
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <table class="table bg-white shadow-sm  table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Task Id</th>
                                    <th scope="col">Task Name</th>
                                    <th scope="col">Created at</th>
                                    <th scope="col">Completed at</th>
                                </tr>
